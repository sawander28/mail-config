# -*- mode: sh -*-

#
# 10. Secured repositories group
#

lib =
  checkprivs(){
	  find "$MR_REPO" -type f -exec chmod 600 {} \;
	  find "$MR_REPO" -type d -exec chmod 700 {} \;
  }

[$HOME/.gnupg]
checkout = git clone ssh://git@rpi3.local/repos/gnupg-config.git $MR_REPO
fixups = checkprivs
skip = ! myworkstation

[$HOME/.ssh]
checkout = git clone ssh://git@rpi3.local/repos/ssh-config.git $MR_REPO
fixups = checkprivs
skip = ! myworkstation

[$HOME/.password-store]
checkout = git clone ssh://git@rpi3.local/repos/password-store.git $MR_REPO
fixups = checkprivs 
skip = ! myworkstation


