# -*- mode: sh -*-

# This file will be pointed to by an ~/.mrconfig symlink
# created in the fixups section below

[DEFAULT]
include =
  if [ -e ~/repos/wandsas/mr-config/library-loaders ]; then
    . ~/repos/wandsas/mr-config/library-loaders
    include_mr_extensions
    load_libraries ~/repos/wandsas/mr-config/sh.d/*
    include_lib_dirs ~/repos/wandsas/mr-config/lib.d
  fi

[$HOME/repos/wandsas/mr-config]
checkout =
  git clone git@rpi3.local:repos/mr-config.git "$MR_REPO"
post_checkout =
  cd "$MR_REPO" && git remote add github git@github.com:sawander/mr-config.git
# This loads .config/mr/.mrconfig
chain = true
fixups =
  ln -sf "$MR_REPO/home-mrconfig" ~/.mrconfig
  ln -sf "$MR_REPO/.stow-global-ignore" ~
